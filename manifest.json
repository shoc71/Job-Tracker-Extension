{
  "manifest_version": 3,
  "name": "Job Tracker",
  "description": "Store and download job applications easily.",
  "version": "1.0",

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon1.png"
    }
  },

  "permissions": ["storage", "tabs"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["table.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icons/icon1.png"
  }
}
